<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
	<PackageOutputPath>./nupkg</PackageOutputPath>
	<PackageId>Reline.CommandLine</PackageId>
	<PackageProjectUrl>https://www.github.com/thinker227/RelineLang</PackageProjectUrl>
	<PackageTags>reline compiler cli tool</PackageTags>
	<PackageVersion>1.0.0-dev</PackageVersion>
	<PackageType>CLI tool</PackageType>
	<PackAsTool>true</PackAsTool>
	<ToolCommandName>reline</ToolCommandName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Spectre.Console" Version="0.44.1-preview.0.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Reline.Compilation\Reline.Compilation.csproj" />
  </ItemGroup>

</Project>
